@model IEnumerable<Report.Models.User>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .center-content {
            text-align: center;
            font-weight: bold;
            color: #0070C0;
        }
    </style>
</head>

<body>
    <div class="center-content">
        <h2>Quản lí tài khoản</h2>
    </div>
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Tên người dùng</th>
                <th>Mật khẩu</th>
                <th>Email</th>
                <th>Phân quyền</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                    <td>@Html.DisplayFor(modelItem => item.UserPassword)</td>
                    <td>@Html.DisplayFor(modelItem => item.UserEmail)</td>
                    <td>@Html.DisplayFor(modelItem => item.UserRole)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-success">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>

