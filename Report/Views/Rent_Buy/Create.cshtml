@model Report.Models.Rent_Buy

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

    <h1 class="text-center">Tạo bài mới</h1>

    <hr />
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Tên bài</label>
                    <input asp-for="RentBuyName" class="form-control" />
                    <span asp-validation-for="RentBuyName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Thông tin mô tả</label>
                    <textarea asp-for="RentBuyDescription" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="RentBuyDescription" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Tỉnh/Thành Phố	</label>
                    <input asp-for="RentBuyProvince" class="form-control" />
                    <span asp-validation-for="RentBuyProvince" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Giá tiền /1m2</label>
                    <input asp-for="RentBuyPrice" class="form-control" />
                    <span asp-validation-for="RentBuyPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Diện tích	</label>
                    <input asp-for="RentBuyArea" class="form-control" />
                    <span asp-validation-for="RentBuyArea" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Số điện thoại		</label>
                    <input asp-for="RentBuyPhone" class="form-control" />
                    <span asp-validation-for="RentBuyPhone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Ảnh mô tả		</label>
                    <input asp-for="RentBuyImage" type="file" class="form-control" />
                    <span asp-validation-for="RentBuyImage" class="text-danger"></span>
                    <input asp-for="RentBuyImage1" type="file" class="form-control" />
                    <span asp-validation-for="RentBuyImage1" class="text-danger"></span>
                    <input asp-for="RentBuyImage2" type="file" class="form-control" />
                    <span asp-validation-for="RentBuyImage2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Trạng thái		</label>
                    <input asp-for="RentBuyStatus" class="form-control" />
                    <span asp-validation-for="RentBuyStatus" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Phân loại</label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                </div>
                <div class="form-group">
                    <label class="control-label">Tài khoản đăng</label>
                    <input asp-for="UserId" class="form-control" value="@User.Identity.Name" readonly />
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-success">Back</a>
                </div>
            </form>
        </div>
    </div>



</body>
</html>