@model IEnumerable<Report.Models.Rent_Buy>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        .center-content {
            text-align: center;
            font-weight: bold;
            color: #0070C0;
        }
    </style>
</head>

<body>
    <div class="center-content">
        <h2>Quản lí bài viết</h2>
    </div>

    <p>
        <a asp-action="Create" class="btn btn-primary">Tạo bài</a>
    </p>

    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>

                    <th>Tên Bài</th>
                    <th>Thông tin mô tả</th>
                    <th>Tỉnh/Thành Phố</th>
                    <th>Giá</th>
                    <th>Diện tích</th>
                    <th>Số điện thoại</th>
                    <th>Ảnh mô tả</th>
                    <th>Trạng thái</th>
                    <th>Phân loại</th>
                    <th>Người đăng</th>
                    <th>Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.RentBuyName)</td>
                        <td>
                            <script>
                                var description = '@Html.DisplayFor(modelItem => item.RentBuyDescription)';
                                document.write(description.length > 50 ? description.substring(0, 50) + '...' : description);
                            </script>
                        </td>

                        <td>@Html.DisplayFor(modelItem => item.RentBuyProvince)</td>
                        <td>@Html.DisplayFor(modelItem => item.RentBuyPrice)</td>
                        <td>@Html.DisplayFor(modelItem => item.RentBuyArea)</td>
                        <td>@Html.DisplayFor(modelItem => item.RentBuyPhone)</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RentBuyImage)<br>
                            @Html.DisplayFor(modelItem => item.RentBuyImage1) <br>
                            @Html.DisplayFor(modelItem => item.RentBuyImage2)
                        </td>

                        <td>@Html.DisplayFor(modelItem => item.RentBuyStatus)</td>
                        <td>@Html.DisplayFor(modelItem => item.Category.CategoryName)</td>
                        <td>@Html.DisplayFor(modelItem => item.UserId)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.RentBuyId" class="btn btn-warning btn-custom">Edit</a> <br>
                            <a asp-action="Details" asp-route-id="@item.RentBuyId" class="btn btn-info btn-custom">Details</a> <br>
                            <a asp-action="Delete" asp-route-id="@item.RentBuyId" class="btn btn-danger btn-custom">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>